  <content>class BaseElementAPI {
  def xwiki;
  def services;
  def context;

  def modelsetid;

  void init(modelsetid, xwiki, services, context) {
    this.xwiki = xwiki;
    this.services = services;
    this.context = context;
    this.modelsetid = modelsetid;
  }

  String getName(id) {
    def modelService = this.services.model;
    def wiki = this.context.getDatabase();
    def documentReference = modelService.createDocumentReference(wiki, this.modelsetid, id);
    def document = this.xwiki.getDocument(documentReference);
    def object = document.getObject('LPCode.ModelClass');
    def name = object.getProperty('name');
    return name.getValue();
  }
}</content>
