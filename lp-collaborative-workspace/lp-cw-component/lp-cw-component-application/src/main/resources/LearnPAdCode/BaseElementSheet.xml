<xwikidoc version="1.1">
  <web>LearnPAdCode</web>
  <name>BaseElementSheet</name>
  <language/>
  <defaultLanguage/>
  <translation>0</translation>
  <creator>xwiki:XWiki.Admin</creator>
  <creationDate>1422284619000</creationDate>
  <parent>LearnPAdCode.BaseElementClass</parent>
  <author>xwiki:XWiki.Admin</author>
  <contentAuthor>xwiki:XWiki.Admin</contentAuthor>
  <date>1430752510000</date>
  <contentUpdateDate>1430752365000</contentUpdateDate>
  <version>1.1</version>
  <title>$!services.learnpad.getName($doc.name)</title>
  <comment/>
  <minorEdit>false</minorEdit>
  <syntaxId>xwiki/2.1</syntaxId>
  <hidden>false</hidden>
  <content>{{velocity}}
#set($discard = $xwiki.ssx.use('IconThemes.FontAwesome'))
#set($discard = $xwiki.jsx.use('IconThemes.FontAwesome'))
#set($id = $doc.name)
{{html clean='false' xwiki='false'}}
&lt;div class="row"&gt;
  &lt;div class="col-xs-12 col-md-12"&gt;
    &lt;p&gt;
      ${services.learnpad.getDocumentation($id)}
    &lt;/p&gt;
  &lt;/div&gt;
&lt;/div&gt;

&lt;div class="row"&gt;
  &lt;div class="col-xs-12 col-md-6"&gt;
    &lt;div class="panel panel-default"&gt;
      &lt;div class="panel-heading"&gt;${services.localization.render('LearnPAdCode.BaseElementSheet.goback')}&lt;/div&gt;
      &lt;div class="panel-body"&gt;
#set($incomings = $services.learnpad.getIncomings($id))
#foreach($incoming in $incomings)
  #set($sourceRef = $services.model.createDocumentReference("xwiki", $doc.space, $incoming))
  #set($sourceDoc = $xwiki.getDocument($sourceRef))
  #set($sourceTitle = $sourceDoc.title)
      &lt;a href="${xwiki.getURL($sourceRef)}"&gt;
        &lt;button type="button" class="btn btn-default btn-block"&gt;
          &lt;div class="text-left"&gt;
            &lt;i class="fa fa-arrow-circle-left"&gt;&lt;/i&gt;
            ${sourceTitle}
          &lt;/div&gt;
        &lt;/button&gt;
      &lt;/a&gt;
#end
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;
&lt;div class="col-xs-12 col-md-6"&gt;
  &lt;div class="panel panel-default"&gt;
  &lt;div class="panel-heading"&gt;${services.localization.render('LearnPAdCode.BaseElementSheet.gonext')}&lt;/div&gt;
    &lt;div class="panel-body"&gt;
#set($outgoings = $services.learnpad.getOutgoings($id))
#foreach($outgoing in $outgoings)
  #set($targetRef = $services.model.createDocumentReference("xwiki", $doc.space, $outgoing))
  #set($targetDoc = $xwiki.getDocument($targetRef))
  #set($targetTitle = $targetDoc.title)
      &lt;a href="${xwiki.getURL($targetRef)}"&gt;
        &lt;button type="button" class="btn btn-default btn-block"&gt;
          &lt;div class="text-right"&gt;
            ${targetTitle}
            &lt;i class="fa fa-arrow-circle-right"&gt;&lt;/i&gt;
          &lt;/div&gt;
        &lt;/button&gt;
      &lt;/a&gt;
#end
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
{{/html}}
{{/velocity}}</content>
</xwikidoc>
