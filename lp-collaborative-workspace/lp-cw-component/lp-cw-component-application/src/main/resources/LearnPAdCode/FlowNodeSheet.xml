  <defaultTemplate/>
  <validationScript/>
  <comment/>
  <minorEdit>false</minorEdit>
  <syntaxId>xwiki/2.1</syntaxId>
  <hidden>false</hidden>
  <content>{{velocity}}
#set($apiBPMN = $services.learnpad.bpmn)
{{html clean='false' xwiki='false'}}
&lt;div class="row"&gt;
  &lt;div class="col-xs-12 col-md-12"&gt;
    &lt;p&gt;
      ${apiBPMN.flownode.getDocumentation()}
    &lt;/p&gt;
  &lt;/div&gt;
&lt;/div&gt;

&lt;div class="row"&gt;
  &lt;div class="col-xs-12 col-md-6"&gt;
    &lt;div class="panel panel-default"&gt;
      &lt;div class="panel-heading"&gt;${services.localization.render('LearnPAdCode.FlowNodeSheet.goback')}&lt;/div&gt;
      &lt;div class="panel-body"&gt;
#set($incomings = $apiBPMN.flownode.getIncomings())
#foreach($incoming in $incomings)
      #set($sourceFlowNode = $apiBPMN.sequenceflow.getSourceRef($incoming))
      &lt;a href="${apiBPMN.flownode.getURL($sourceFlowNode)}"&gt;
        &lt;button type="button" class="btn btn-default btn-block"&gt;
          &lt;div class="text-left"&gt;
            &lt;i class="fa fa-arrow-circle-left"&gt;&lt;/i&gt;
            ${apiBPMN.sequenceflow.getName($incoming)}
            [${apiBPMN.flownode.getName($sourceFlowNode)}]
          &lt;/div&gt;
        &lt;/button&gt;
      &lt;/a&gt;
#end
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;
&lt;div class="col-xs-12 col-md-6"&gt;
  &lt;div class="panel panel-default"&gt;
  &lt;div class="panel-heading"&gt;${services.localization.render('LearnPAdCode.FlowNodeSheet.gonext')}&lt;/div&gt;
    &lt;div class="panel-body"&gt;
#set($outgoings = $apiBPMN.flownode.getOutgoings())
#foreach($outgoing in $outgoings)
      #set($targetFlowNode = $apiBPMN.sequenceflow.getTargetRef($outgoing))
      &lt;a href="${apiBPMN.flownode.getURL($targetFlowNode)}"&gt;
        &lt;button type="button" class="btn btn-default btn-block"&gt;
          &lt;div class="text-right"&gt;
            ${apiBPMN.sequenceflow.getName($outgoing)}
            [${apiBPMN.flownode.getName($targetFlowNode)}]
            &lt;i class="fa fa-arrow-circle-right"&gt;&lt;/i&gt;
          &lt;/div&gt;
        &lt;/button&gt;
      &lt;/a&gt;
#end
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
{{/html}}
{{/velocity}}</content>
